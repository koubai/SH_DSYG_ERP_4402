<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
        PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
        "http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="com.cn.tbps">

	<resultMap id="UserDto" class="com.cn.dsyg.dto.UserDto">
		<result property="userid" column="userid" />
		<result property="belongto" column="belongto" />
		<result property="username" column="username" />
		<result property="password" column="password" />
		<result property="rolecode" column="rolecode" />
		<result property="status" column="status" />
		<result property="note" column="note" />
		<result property="createuid" column="createuid" />
		<result property="createdate" column="createdate" />
		<result property="updateuid" column="updateuid" />
		<result property="updatedate" column="updatedate" />
	</resultMap>
	
	<select id="queryUserCountByPage" resultClass="int" parameterClass="java.util.Map">
		select count(*) from tbuser T where 1 = 1
			<isNotEmpty prepend="and" property="username">
				T.username like '%$username$%' ESCAPE '/'
			</isNotEmpty>
	</select>
	
	<select id="queryUserByPage" parameterClass="java.util.Map" resultMap="UserDto">
		select T.* from tbuser T where 1 = 1
		<isNotEmpty prepend="and" property="username">
			T.username like '%$username$%' ESCAPE '/'
		</isNotEmpty>
		order by T.updatedate desc
		LIMIT #start#, #end#
	</select>
	
	<select id="queryUserByID" parameterClass="java.util.Map" resultMap="UserDto">
		select * from tbuser where 
			userid = #userid#
	</select>
	
	<select id="queryMulUserByID" parameterClass="java.util.Map" resultMap="UserDto">
		select * from tbuser where 
			userid in ($userids$)
	</select>
	
	<select id="queryAllUser" parameterClass="java.util.Map" resultMap="UserDto">
		select * from tbuser where 1 = 1 and status = 1 order by createdate desc
	</select>
	
	<delete id="deleteUser" parameterClass="java.util.Map">
		delete from tbuser where userid = #userid#
	</delete>
	
	<insert id="insertUser" parameterClass="com.cn.dsyg.dto.UserDto">
		insert into tbuser(userid,belongto,username,password,rolecode,status,note,createuid,createdate,updateuid,updatedate)
		values(#userid#,#belongto#,#username#,#password#,#rolecode#,#status#,#note#,#createuid#,NOW(),#updateuid#,NOW())
	</insert>
	
	<update id="updateUser" parameterClass="com.cn.dsyg.dto.UserDto">
		update tbuser
		set username = #username#,
			belongto = #belongto#,
			password = #password#,
			rolecode = #rolecode#,
			status = #status#,
			note = #note#,
			updateuid = #updateuid#,
			updatedate = NOW()
		where userid = #userid#
	</update>
	
	<select id="queryUserListByPage" parameterClass="java.util.Map" resultMap="UserDto">
		select T.* from tbuser T where 1 = 1
		<isNotEmpty prepend="and" property="status">
			T.status = #status#
		</isNotEmpty>
		<isNotEmpty prepend="and" property="fieldno">
			T.fieldno = #fieldno#
		</isNotEmpty>
		<isNotEmpty prepend="and" property="useridfrom">
			T.userid <![CDATA[>=]]> #useridfrom#
		</isNotEmpty>
		<isNotEmpty prepend="and" property="useridto">
			T.userid <![CDATA[<=]]> #useridto#
		</isNotEmpty>		
		<isNotEmpty prepend="and" property="keyword">
			T.keyword like '%$keyword$%' ESCAPE '/'
		</isNotEmpty>
		order by T.userid 
		LIMIT #start#, #end#
	</select>
	
	<select id="queryUserListCountByPage" resultClass="int" parameterClass="java.util.Map">
		select count(*) from tbuser T where 1 = 1
		<isNotEmpty prepend="and" property="status">
			T.status = #status#
		</isNotEmpty>
		<isNotEmpty prepend="and" property="fieldno">
			T.fieldno = #fieldno#
		</isNotEmpty>
		<isNotEmpty prepend="and" property="useridfrom">
			T.userid <![CDATA[>=]]> #useridfrom#
		</isNotEmpty>
		<isNotEmpty prepend="and" property="useridto">
			T.userid <![CDATA[<=]]> #useridto#
		</isNotEmpty>		
		<isNotEmpty prepend="and" property="keyword">
			T.keyword like '%$keyword$%' ESCAPE '/'
		</isNotEmpty>
	</select>
</sqlMap>